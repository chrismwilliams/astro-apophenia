---
import { Image } from "astro:assets";
import ImageLayout from "$layouts/ImageLayout.astro";
import image from "$assets/maxim-berg-unsplash.jpg";
---

<ImageLayout title="Auto Decoding & Lazy Loading Example - Astro Image LCP">
	<h1>Auto Decoding & Lazy Loading Example.</h1>
	<Image
		src={image}
		alt="A colorful abstract background with wavy lines by Maxim Berg"
		decoding="auto"
		loading="lazy"
	/>
	<dl>
		<dt>Decoding</dt>
		<dd><strong>auto</strong></dd>
		<dt>Loading</dt>
		<dd>lazy</dd>
		<dt>Image</dt>
		<dd>WebP &mdash; 1.3 MB &mdash; 4000px x 2666px</dd>
	</dl>
	<p>Note: <strong>Bold</strong> repesents attribute values different from default.</p>
</ImageLayout>
