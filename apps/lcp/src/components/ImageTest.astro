---
import { Image } from "astro:assets";
import image from "$assets/maxim-berg-unsplash.jpg";

type Props = {
	decoding: "async" | "auto" | "sync" | false;
	loading: "eager" | "lazy" | false;
};

const { decoding, loading } = Astro.props;

const decodingDefault = "async";
const loadingDefault = "lazy";
---

<Image
	src={image}
	alt="A colorful abstract background with wavy lines by Maxim Berg"
	decoding={decoding}
	loading={loading}
/>
<dl>
	<dt>Decoding</dt>
	<dd>{decoding === decodingDefault ? decoding : <strong>{`${decoding}`}</strong>}</dd>
	<dt>Loading</dt>
	<dd>{loading === loadingDefault ? loading : <strong>{`${loading}`}</strong>}</dd>
	<dt>Image</dt>
	<dd>WebP &mdash; 1.3 MB &mdash; 4000px x 2666px</dd>
</dl>
<p>Note: <strong>Bold</strong> repesents attribute values different from default.</p>
