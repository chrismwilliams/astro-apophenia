{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["es2022", "dom", "dom.iterable"],
		"paths": {
			"$components/*": ["src/components/*"],
			"$layouts/*": ["src/layouts/*"],
			"$assets/*": ["src/assets/*"]
		}
	},
	"exclude": ["node_modules", ".vscode", "dist"]
}
